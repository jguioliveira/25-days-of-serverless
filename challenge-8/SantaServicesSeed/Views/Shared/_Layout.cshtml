@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @await Html.PartialAsync("_HeadReferences")
</head>
<body> 
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2020 - Santa's Reindeer Guidance & Delivery System</p>
        </footer>
    </div>

    @await Html.PartialAsync("_FooterReferences")

    @RenderSection("scripts", required: false)
</body>
</html>