@{
    ViewData["Title"] = "Status Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model System.Collections.Generic.List<SantaServicesSeed.Model.SantasServices>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="container-md">
    <h3>Status Services</h3>
    <form method="post">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Region</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].Id)
                            @Html.HiddenFor(modelItem => Model[i].Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].Name)
                            @Html.HiddenFor(modelItem => Model[i].Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].Region)
                            @Html.HiddenFor(modelItem => Model[i].Region)
                        </td>
                        <td>
                            <select asp-for="@Model[i].Status" asp-items="@ViewBag.StatusServices"></select>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>    
</div>